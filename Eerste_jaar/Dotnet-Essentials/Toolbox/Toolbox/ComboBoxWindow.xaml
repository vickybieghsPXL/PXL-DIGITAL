<Window x:Class="Toolbox.ComboBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toolbox"
        mc:Ignorable="d"
        Title="ComboBoxWindow" Height="98.666" Width="196.101">
    <Grid>
        <Label
            Margin="10,37,10,7" Name="colorLabel"/>
        <ComboBox Margin="10,10,10,0"
                  VerticalAlignment="Top"
                  Name="colorComboBox" SelectionChanged="colorComboBox_SelectionChanged" SelectedIndex="-1">
            <ComboBoxItem>Red</ComboBoxItem>
            <ComboBoxItem>Green</ComboBoxItem>
            <ComboBoxItem>Blue</ComboBoxItem>
            <ComboBoxItem>DarkViolet</ComboBoxItem>
            <ComboBoxItem>LightCoral</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
