<Window x:Class="Toolbox.SlidersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toolbox"
        mc:Ignorable="d"
        Title="SlidersWindow" Height="199" Width="167">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="100" Margin="43,9,0,0" VerticalAlignment="Top" Width="100" Background="#FFB8FFA9">
            <Ellipse Name="sizeChangingEllipse" Fill="#FFF4F4F5" Height="50" Stroke="Black" Width="50" Canvas.Bottom="0" Canvas.Left="0"/>
        </Canvas>
        <Slider Name="horizSlider" HorizontalAlignment="Left" Margin="43,114,0,0" VerticalAlignment="Top" Width="100" TickPlacement="TopLeft" TickFrequency="2" Cursor="None" ValueChanged="horizSlider_ValueChanged" Value="5"/>
        <Slider Name="vertSlider"  HorizontalAlignment="Left" Margin="14,9,0,0" VerticalAlignment="Top" Orientation="Vertical" Height="100" TickFrequency="2" TickPlacement="BottomRight" ValueChanged="vertSlider_ValueChanged" Value="5"/>
        <Label Name="horizLabel" Content="50" HorizontalAlignment="Left" Margin="43,138,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
